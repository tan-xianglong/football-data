@model Team
@{
    ViewData["Title"] = Model.Division.Name + " - " + Model.Name;
}

<h2>@Model.Name</h2>


<div>
    <div>Division: @Model.Division.Name</div>
    <div>Location: @Model.Location</div>
    <div>Stadium: @Model.Stadium</div>
</div>
<hr />
<div class="table-responsive">
    <h3>Squad List</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Shirt #</th>
                <th scope="col">Name</th>
                <th scope="col">Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model.Players)
            {
                <tr>
                    <th scope="row">@player.ShirtNumber</th>
                    <td><a asp-controller="Players" asp-action="Details" asp-route-playerId="@player.PlayerId" class="text-reset">
                        @player.Name
                    </a></td>
                    <td>@player.Position</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a class="btn btn-primary" asp-action="Edit" asp-route-teamId="@Model.TeamId">
    Edit
</a>
<button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-controller="Teams" data-primarykey="teamId" data-name="@Model.Name" data-id="@Model.TeamId">
    Delete
</button>
<partial name="_DeleteModal" />

