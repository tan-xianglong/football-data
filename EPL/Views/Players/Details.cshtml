@model Player
@{
    ViewData["Title"] = Model.Team.Name + " - " + Model.Name;
}

<h2>@Model.Name</h2>
<br />
<div>
    <h4>Squad details</h4>
    <div>Team: @Model.Team.Name</div>
    <div>Position: @Model.Position</div>
    <div>Shirt Number: @Model.ShirtNumber</div>
</div>
<br />
<div>
    <h4>Bio</h4>
    <div>Height: @Model.Height</div>
    <div>Weight: @Model.Weight</div>
    <div>Age: @( DateTime.Now.Year - Model.YearOfBirth)</div>
</div>
<br />
<a class="btn btn-primary" asp-action="Edit" asp-route-playerId="@Model.PlayerId">
    Edit
</a>
<button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-controller="Players" data-primarykey="playerId" data-name="@Model.Name" data-id="@Model.PlayerId">
    Delete
</button>
<partial name="_DeleteModal" />